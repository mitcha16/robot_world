<a href="/">Home</a>
<form action="/robots/<%= @robot.id %>" method="post">
  <h4>Edit Robot:</h4>
  <input type="hidden" name="_method" value="PUT" />
  <ul>Name: <input type='text' name='robot[name]' value="<%= @robot.name %>"/></ul><br/>
  <ul>City: <input type='text' name='robot[city]' value="<%= @robot.city %>"/></ul><br/>
  <ul>State: <input type='text' name='robot[state]' value="<%= @robot.state %>"/></ul><br/>
  <ul>Avatar: <input type='text' name='robot[avatar]' value="<%= @robot.avatar %>"/></ul><br/>
  <ul>Department: <input type='text' name='robot[department]' value="<%= @robot.department %>"/></ul><br/>
  <ul>Birthday: <input type='text' name='robot[birthday]' value="<%= @robot.birthday %>"/></ul><br/>
  <ul>Date Hired: <input type='text' name='robot[hired]' value="<%= @robot.hired %>"/></ul><br/>
  <input type='submit' value="Update Your Robot!"/>
</form>
